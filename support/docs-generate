#!/bin/sh -eu

cd "$(dirname "$0")/.."

nix run \
    --ignore-environment \
    --keep LANG \
    --keep LOCALE_ARCHIVE \
    --file nix \
    nix-project-org2gfm \
    pkgs.ansifilter \
    pkgs.coreutils \
    pkgs.gnugrep \
    pkgs.gnutar \
    pkgs.gzip \
    pkgs.tree \
    --command \
    org2gfm \
    --path-bin \
    --ignore 'links.org\|nix.mac.org\|scaffold\|snippet' \
    --nix "$(command -v nix)" \
    --evaluate \
    "$@"
